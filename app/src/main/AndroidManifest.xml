<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.lijiancheng0614.truefanx">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.github.lijiancheng0614.truefanx.DemoActivity"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.lijiancheng0614.truefanx.IjkPlayerDemoActivity"
            android:configChanges="screenSize|orientation"
            android:label="IjkPlayerDemoActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="io.github.lijiancheng0614.truefanx.VideoPlayerActivity"
            android:configChanges="screenSize|orientation"
            android:label="VideoPlayerActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="io.github.lijiancheng0614.truefanx.BitmapPlayerActivity"
            android:configChanges="screenSize|orientation"
            android:label="BitmapPlayerActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="io.github.lijiancheng0614.truefanx.CubemapPlayerActivity"
            android:configChanges="screenSize|orientation"
            android:label="CubemapPlayerActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="io.github.lijiancheng0614.truefanx.RecyclerViewActivity"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="portrait" />
    </application>

</manifest>
